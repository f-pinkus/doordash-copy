<div id="<%= dom_id order %>">
  <p>
    <strong>Customer name:</strong>
    <%= order.customer_name %>
  </p>

  <p>
    <strong>Restaurant:</strong>
    <%= order.restaurant&.name  || "N/A" %>
  </p>

  <p>
    <strong>Total:</strong>
    <%= order.total %>
  </p>

  <p>
    <strong>Status:</strong>
    <%= order.status %>
  </p>

</div>
